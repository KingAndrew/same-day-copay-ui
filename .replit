
modules = ["nodejs-20"]
[nix]
channel = "stable-24_05"
packages = ["unixtools.netstat", "killall"]

[workflows]
runButton = "Run Web"

[[workflows.workflow]]
name = "Run"
author = 41550643
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash ./pre_stop.sh && npx react-native start --host 0.0.0.0"

[[workflows.workflow]]
name = "Run Web"
author = 41550643
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash ./pre_stop.sh && npm run web"

[[workflows.workflow]]
name = "Run All Tests"
author = 41550643
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x run-all-tests.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./run-all-tests.sh"

[[workflows.workflow]]
name = "Run Test Coverage"
author = 41550643
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x run-test-coverage.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./run-test-coverage.sh"

[[workflows.workflow]]
name = "Run Tests Without Coverage Threshold"
author = 41550643
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x run-all-tests-with-coverage.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./run-all-tests-with-coverage.sh"

[[workflows.workflow]]
name = "Run All Tests With Coverage"
author = 41550643
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x run-all-tests-with-coverage.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./run-all-tests-with-coverage.sh"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 8081
externalPort = 80
